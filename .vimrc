set bg=dark
colorscheme gruvbox

" set tab 4 each
set tabstop=4 " set ts=4 also works
set shiftwidth=4
set softtabstop=4
set expandtab
set smartindent

" show numbers
set number relativenumber
set nowrap

" search options
set hlsearch
set incsearch
set ignorecase
set smartcase

" syntax highlighting
syntax on
